      display: flex;
      flex-wrap: nowrap;
      max-width: 300px; 
      overflow: hidden;
      margin: 0 auto;
      padding: 10px 0;
      position: relative; 
    }
    .page-dots > .tap-area {
      flex: 0 0 auto;
      width: 12px;
      height: 12px;
      margin: 0 6px;
      border-radius: 50%;
      background-color: #ccc;
      border: none;
      cursor: pointer;
      transition: margin-left 0.3s ease, background-color 0.3s; 
    }

    .page-dots > .tap-area[aria-current="true"] {
      background-color: #007bff; 
    }

    .page-dots > .tap-area:focus {
      outline: 2px solid #007bff;
      outline-offset: 2px;
    }

    .sr-only {
      position: absolute;
      width: 1px;
      height: 1px;
      padding: 0;
      margin: -1px;
      overflow: hidden;
      clip: rect(0, 0, 0, 0);
      border: 0;
    }

